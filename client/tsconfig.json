{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
      "lib": ["es6", "dom"],
      "module": "esnext",
      "target": "es6",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "removeComments": true,
      "jsx": "react",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
      "baseUrl": ".",
      "paths": {
        "components": ["./src/components"],
        "hooks": ["./src/hooks"]
      }
  },
  "exclude": ["node_modules/*", "dist/*"]
}