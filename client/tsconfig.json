{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
      "lib": ["es6", "dom"],
      "module": "esnext",
      "target": "es5",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "removeComments": true,
      "jsx": "react",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
      "baseUrl": "./src"
  },
  "include": ["src/*"],
  "exclude": ["node_modules/*", ".yarn/*", ".pnp.*", "build/*"]
}
