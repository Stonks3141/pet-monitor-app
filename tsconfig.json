{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
      "lib": ["es5", "dom"],
      "module": "es6",
      "target": "es5",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "removeComments": true,
      "jsx": "react",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
      "baseUrl": ".",
      "paths": {
        "/*": ["./*"]
      }
  },
  "include": ["src/*", "src/client"],
  "exclude": ["node_modules/*"]
}